<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SeagullflyMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SeagullflyMaui.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Aqua"
    FlyoutBackgroundColor="Grey">

    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="MainPage" />
    <ShellContent
        Title="Seagullfly"
        ContentTemplate="{DataTemplate local:SearchPage}"
        Route="SeagullflyPage" />
    <ShellContent
        Title="Kontakt"
        ContentTemplate="{DataTemplate local:ContactPage}"
        Route="ContactPage" />

</Shell>
