<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SeagullflyMaui.ViewModel"
             x:Class="SeagullflyMaui.View.FlightsResultsPage"
             x:DataType="viewmodel:FlightsResultsViewModel"
             Title="{Binding Title}">
    <ScrollView
        BackgroundColor="Transparent">
        <VerticalStackLayout>
            <Label
                Padding="25"
                Text="Najlepsze wybrane loty"
                FontSize="Medium"
                VerticalOptions="Start"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                TextColor="Black"
                BackgroundColor="LightSlateGray"/>
            <Button
            Text="Show details"
            Command="{Binding FlightDetailsCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>