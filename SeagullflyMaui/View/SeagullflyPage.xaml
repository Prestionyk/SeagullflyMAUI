<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SeagullflyMaui.ViewModel"
             x:Class="SeagullflyMaui.View.SeagullflyPage"
             x:DataType="viewmodel:SeagullflyPageViewModel"
             Title="{Binding Title}">

    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto">
            <Label
                Grid.Row="0"
                Text="{Binding Data}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                FontSize="Large"/>
            <Button Command="{Binding ScrapDataCommand}" x:Name="ButtonClick" Grid.Row="1" Text="Scrap me!" />
        </Grid>
    </ContentPage.Content>

</ContentPage>
